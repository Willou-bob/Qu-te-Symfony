{% extends 'base.html.twig' %}
{% block title %}{{ slug }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
            <ul>
                {% for season in program.seasons %}
                    <li><a href="{{ path('show_season', {'id': season.id }) }}"> Season {{ season.number }}"</a></li>
                    <li>Year {{ season.year }}</li>
                    <li>Description: {{ season.description }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path('wild_index') }}">
        Retour Ã  l'accueil
    </a>

{% endblock %}

