{% extends 'base.html.twig' %}

{% block title %}<h1>Nom de la série</h1>{% endblock %}

{% block body %}

    <div class="media">
        <div class="media-body">
            {% for program in programs %}
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            {% endfor %}
        </div>
    </div>

    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}